<section class="cmap">
	<section class="section">
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<img src="{{{cloudinaryUrl cmap.logo width=600 height=450 crop='fill' quality=80}}}">
				</div>
				<div class="col-md-8 description">
					<p class="lead">
						<span class="inline-header">The MA in Civic Media, Art &amp; Practice</span>
					 {{{cmap.programDescription.html}}}
					</p>
				</div>
			</div>
		</div>
	</section>
	<section class="section" id="apply">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-20">Is CMAP the right program for you?</h3>
				</div>

				<div class="col-md-6 mb-20">
					<div class="embed-responsive embed-responsive-16by9">
						<iframe src="{{cmap.videoLink}}" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					</div>
				</div>

				<div class="col-md-6">
					<div class="lead">{{{cmap.apply1.html}}}</div>
				</div>
				
				<div class="col-md-12">
					<div class="lead">{{{cmap.apply2.html}}}</div>
				</div>
			</div>
		</div>
	</section>

{{!-- Quotes Section -- To Add In Later --}}
{{#if cmapQuotes}}
	<section class="section" id="student-quotes">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">Quotes</h3>
					<div class="row">
						{{#each cmapQuotes}}
							<div class="col-lg-6 col-sm-6 col-xs-12 quote">
								<img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1487613850/topquote_vrbnid.png" height='25px' width='25px'>
								{{{this.quote.html}}}
								<img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1487613858/bottomquote_bxq6vh.png" height='25px' width='25px'>

								<div class="quote-author">- {{this.person.name.last}}, {{this.person.name.first}}</div>
							</div>
							
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</section>

{{/if}}

	<section class="section dark" id="alumni">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header">Alumni</h3>
					<div class="lead">{{{cmap.alumni.html}}}</div>
				</div>
			</div>
		</div>
	</section>
	
	{{#if faculty}}
	<section class="section" id="faculty">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">Faculty</h3>
				</div>
			</div>
			
				<div class="row grid-space-10">
				{{!-- Show leadership --}}
					{{#each faculty}}
						{{> people/person person=this}}
					{{/each}}
				</div>
		</div>
	</section>
	{{/if}}

	{{#if students}}
	<section class="section" id="students">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">CMAP Students</h3>
				</div>
			</div>
			
				<div class="row grid-space-10">
				{{!-- Show leadership --}}
					{{#each students}}
						{{> people/CMAPperson person=this}}
					{{/each}}
				</div>
			
		</div>
	</section>
	{{/if}}

</section>
