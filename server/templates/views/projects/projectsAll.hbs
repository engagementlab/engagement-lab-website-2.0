<section class="main-container padding-bottom-clear">
	<div class="container">

		<div class="main">
			<h1 class="page-title"><strong>{{upperCase section}}: </strong><span class="font-light"></span></h1>
			{{> page/lead}}
		</div>

	</div>

	<div class="row filters">
		{{#each filters}}
			{{#each this}}
				<div class="btn-group clearfix">
				<button id="button-group-{{combine @key}}" class="filter-options btn btn-default dropdown-toggle" type="button" data-filter-group="{{combine @key}}" data-toggle="dropdown">
				<div class="button-text">{{@key}} <span class="{{combine @key}}-number filter-counter"> </span><span class="bigCaret"></span></div>
				</button>
				<ul class="dropdown-menu scrollable" role="menu">
					<li><a id="{{combine @key}}:all" data-filter=""  href="#" data-filter-value="" data-filter-group="{{combine @key}}" class="all-options option-{{combine @key}}">All {{pluralize @key}}</a></li>
					{{#each this}}
					<li><a id="{{combine category}}:{{combine key}}" value="#" href="#" data-filter-value=".{{key}}" data-filter-group="{{combine category}}" class="option-{{combine category}}">{{name}}</a></li>
					{{/each}}
				</ul>
			</div>
			{{/each}}
		{{/each}}
		<div class="btn-group clearfix">
			<button class="filter-options clear-all btn btn-default dropdown-toggle" type="button" data-filter-value="">Reset</button>
		</div>
	</div>

	<div class="filters-chosen" style="display:none">
		<h3>Chosen Filters (click to remove): </h3>
		
	</div>

	<div class="container pv-20">
		<div class="row" id="projects-isotope">
			{{#if listings}}
				
				{{!-- Show projects --}}
				{{#each listings}}
					{{> sublisting listing=this}}
				{{/each}}

			{{else}}
				
				<strong>No projects! Fiddlesticks!</strong>
			
			{{/if}}
		</div>
	</div>
</section>
