<!-- main-container start -->
<!-- ================ -->
<section class="main-container">

	<div class="container-fluid">
		<div class="row">

			<div class="main col-md-12">

				<h1 class="page-title text-center">Our Team</h1>

				<h3 class="text-center pv-30">Faculty Leadership</h3>
				<div class="row grid-space-10 team-row1">
						{{!-- Show leadership --}}
						{{#each leadership}}
							{{> people/person person=this}}
						{{/each}}

				</div>

				<div class="separator-4"></div>
				<h3 class="text-center pv-30">Advisory Board</h3>
				<div class="row grid-space-10 team-row2">

					{{!-- Show lab team --}}
					{{#each board}}
						{{> people/person person=this}}
					{{/each}}

				</div>

				<div class="separator-4"></div>
				<h3 class="text-center pv-30">Staff</h3>
				<div class="row grid-space-10 team-row3">

					{{!-- Show lab team --}}
					{{#each staff}}
						{{> people/person person=this}}
					{{/each}}

				</div>


				<div class="separator-4"></div>
				<h3 class="text-center pv-30">Faculty Fellows & Affiliates</h3>
				<div class="row grid-space-10 team-row4">

					{{!-- Show fellows --}}
					{{#each fellows}}
						{{> people/person person=this}}
					{{/each}}

				</div>
				
				{{#if cmap}}
					<div class="separator-4"></div>
					<h3 class="text-center pv-30">CMAP Students</h3>
					<div class="row grid-space-10 team-row5">

						{{!-- Show cmap students --}}
						<h3 class="cohort">{{currentYear}}</h3>
						{{#each currentCohort}}
								{{> people/person person=this }}
						{{/each}}

					</div>

					<div class="row grid-space-10 team-row5">
						<h3 class="cohort">{{prevYear}}</h3>
						{{#each prevCohort}}
								{{> people/person person=this }}
						{{/each}}
					</div>
						
				{{/if}}


				{{#if labassistants}}
					<div class="separator-4"></div>
					<h3 class="text-center pv-30">Lab Assistants</h3>
					<div class="row grid-space-10 team-row6">

						{{!-- Show lab assistants --}}
						{{#each labassistants}}
							{{> people/person person=this}}
						{{/each}}

					</div>
				{{/if}}
				
		</div>
	</div>
</section>