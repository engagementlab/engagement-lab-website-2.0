<section class="section main tama">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1 class="tama-text" id="tama-name">Errol the Tamagagement Ghost <3</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="tama-container">
					<img src="/images/tamagagement/{{mood}}.png" alt="Errol">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<h3 class="tama-text" id="tama-feeling">{{message}}</h3>
				<div class="actions-container">
					<ul class="actions">
						{{#each actions}}
						<li>
							<form method="POST">
								<input type="hidden" value="{{this.id}}" name="action">
								<button type="submit" class="btn btn-default">{{this.label}}</button>
							</form>
						</li>
						{{/each}}
					</ul>
					<div class="separator-5 pv-20"></div>
					<h3 class="tama-text">Things recently said to Errol:</h3>
					{{#each comments}}
					<p class="tama-comment">"{{this.content}}" <span class="tama-author"><i>-{{this.author}}</i></span></p>
					{{/each}}
					<form method="POST">
						<input type="hidden" name="action" value="comment.create">
						<strong>Share your love for Errol:</strong>
						<p><textarea name="content"></textarea></p>
						<strong>Your name:</strong>
						<p><input type="text" name="author" maxlength="100"></p>
						<p><button type="submit" class="btn btn-default">post comment :)</button></p>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>