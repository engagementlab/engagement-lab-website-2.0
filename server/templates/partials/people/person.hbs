<div class="col-sm-6 col-md-4 team-member">
	<div class="image-box style-2 mb-20 text-center">
			
		<a href="/people/{{person.key}}">
			<img id="{{cleanString person.name.first}}-{{cleanString person.name.last}}" src="{{{cloudinaryUrl person.image width=192 height=192}}}" alt="{{person.name.first}} {{person.name.last}}" class="photo">
			
			<div class="body">
				<h3 class="theme-primary">{{person.name.first}} {{person.name.last}}</h3>

				{{#ifeq person.category 'CMAP'}}

					<p>{{person.cohort}}</p>

				{{else}}

					<p>{{person.title}}</p>

				{{/ifeq}}
				
			</div>
		</a>

	</div>
</div>