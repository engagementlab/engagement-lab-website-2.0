<div class="col-md-4">
	<div class="pv-30 ph-20 recent-event-box feature-box text-center" id="box-{{@index}}">
		<div class="va-container">
			<div class="va-align">
				<div class="summary">
					<img src="{{{cloudinaryUrl event.image height=200 quality=80}}}">
					<h4>{{event.name}}</h4>
					{{#if event.text}}
						<p>{{{event.text}}}</p>
					{{/if}}
				</div>
				<a href="{{event.url}}">{{event.urlText}} <span><i class="fa fa-chevron-right" aria-hidden="true"></i></span></a>
			</div>
		</div>
	</div>
</div>