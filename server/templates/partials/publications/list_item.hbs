<div class="col-sm-12 col-md-8 listing publication-item {{#each listing.person}}{{this.key}} {{/each}}{{#each listing.keyword}}{{this.key}} {{/each}} {{listing.form.key}}">
	<div class="body mb-40">
		<h3 class="title">
		{{#if listing.articleResource.file.url}}
			<a href="{{listing.articleResource.file.url}}" target="_blank">{{listing.title}}</a>
		{{else}}
			{{#if listing.articleResource.url}}
			<a href="{{listing.articleResource.url}}" target="_blank">{{listing.title}}</a>
			{{else}}
				{{listing.title}}
			{{/if}}
		{{/if}}
		</h3>
		<p class="small mb-10">{{#if listing.date}}<i class="icon-calendar"></i> {{date listing.date format='MM DD YYYY'}}{{/if}} <i class="icon-user-1"></i> {{listing.author}}</p>
		<div class="separator-2"></div>
		{{#if listing.blurb}}
			<p class="mb-40"><strong>{{listing.blurb}}</strong><br/> </p>
		{{/if}}
	</div>
</div>