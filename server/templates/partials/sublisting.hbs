<div class="col-sm-6 col-md-4 project-item {{#each listing.person}}{{this.key}} {{/each}}{{#each listing.keyword}}{{this.key}} {{/each}}{{#each listing.form}}{{this.key}} {{/each}}{{#each listing.format}}{{this.key}} {{/each}}">
	<a href="{{listing.href}}">
		<div class="image-box style-2 mb-20 project-box">
			<div class="overlay-container overlay-visible">
				<img src="{{cloudinaryUrl listing.image crop='fill' width=600 height=450}}" alt="{{listing.name}}">
			</div>
			<div class="body">
				{{#if listing.description}}
					<p><span id="sublisting-title">{{listing.name}}</span> {{limit listing.description 300}}</p>
				{{/if}}
			</div>
		</div>
	</a>
</div>